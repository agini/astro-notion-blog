---
import Layout from "../../layouts/Layout.astro";
import { getPostsByTagAndPage } from "../../lib/notion";

// ★ page は必ず 1 を渡す
const posts = await getPostsByTagAndPage("experience", 1);
---

<h1>体験ログ</h1>

<ul>
  {posts.map((post) => (
    <li>
      <a href={`/log/${post.slug}`}>{post.title}</a>
    </li>
  ))}
</ul>
