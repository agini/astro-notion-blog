---
import Layout from "../../layouts/Layout.astro";
import { getPostsByTagAndPage } from "../../lib/notion";

const posts = await getPostsByTagAndPage("game", 1);
---

<Layout title="Game">
  <h1>Game</h1>

  <ul>
    {posts.map((post) => (
      <li>
        <a href={`/game/${post.Slug}`}>
          {post.Title}
        </a>
      </li>
    ))}
  </ul>
</Layout>
