---
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: any
  enableLink?: boolean
}

const { post, enableLink = true } = Astro.props

// slug / title 大文字小文字対応
const slug = post.slug ?? post.Slug ?? ''
const title = post.title ?? post.Title ?? ''

// Icon（Worker API は icon が無いので null）
const icon = post.icon ?? post.Icon ?? null
---
<h2 class="post-title">
  {
    enableLink ? (
      <a href={getPostLink(slug)}>
        {icon && icon.Type === 'emoji' ? (
          <>
            <span>{icon.Emoji}</span>
            {title}
          </>
        ) : icon && icon.Type === 'external' ? (
          <>
            <img src={icon.Url} alt="Post title icon" />
            {title}
          </>
        ) : (
          title
        )}
      </a>
    ) : (
      <>
        {icon && icon.Type === 'emoji' ? (
          <>
            <span>{icon.Emoji}</span>
            {title}
          </>
        ) : icon && icon.Type === 'external' ? (
          <>
            <img src={icon.Url} alt="Post title icon" />
            {title}
          </>
        ) : (
          title
        )}
      </>
    )
  }
</h2>

<style>
  .post-title {
    margin: 0;
    padding: 0.2rem 0;
    font-size: 2rem;
    font-weight: 700;
    color: var(--fg);
  }
  .post-title a {
    font-size: 1.6rem;
    color: inherit;
  }
  .post-title span,
  .post-title img {
    display: inline-block;
    margin-right: 0.2em;
  }
  .post-title span {
    font-size: 1.2em;
  }
  .post-title img {
    width: 1.3em;
    height: 1.3em;
    vertical-align: sub;
  }
  @media (max-width: 640px) {
    .post-title {
      font-size: 1.4rem;
    }
    .post-title a {
      font-size: 1.2rem;
    }
  }
</style>