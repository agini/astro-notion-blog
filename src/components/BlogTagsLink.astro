---
import type { SelectProperty } from '../lib/interfaces.ts'
import { getTagLink } from '../lib/blog-helpers.ts'
import NoContents from './NoContents.astro'
import '../styles/notion-color.css'

export interface Props {
  heading: string
  tags: SelectProperty[]
}

const { heading, tags } = Astro.props
---

<div class="blog-tags-link">
  <h2>{heading}</h2>
  {
    tags.length === 0 ? (
      <NoContents contents={tags} />
    ) : (
      <ul>
        {tags.map((tag: SelectProperty) => (
          <li>
            <a href={getTagLink(tag.name)} class={`tag ${tag.color}`}>
              {tag.name}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</div>

<style>
  .blog-tags-link {
  }
  .blog-tags-link h2 {
    margin: 0;
    padding-left: 0.4rem;
    color: #777;
    font-size: 0.95rem;
  }
  .blog-tags-link ul {
    list-style-type: none;
    padding: 0;
    margin-top: 0.3rem;
    margin-block-end: 1rem;
  }
  .blog-tags-link ul li {
    position: relative;
    padding: 0.4rem;
    line-height: 1.2rem;
    font-size: 0.9rem;
    gap: 6px;
  }
  .blog-tags-link ul li a {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.85rem;
    letter-spacing: 0.04em;
    color: #9adfff;
    background: rgba(0, 0, 0, 0.35);
    border: 1px solid rgba(79,195,247,0.25);
    transition:
      background 0.2s ease,
      color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .blog-tags-link ul li a:hover {
    background: linear-gradient(
      90deg,
      rgba(79,195,247,0.3),
      rgba(79,195,247,0.08)
    );
    color: #ffffff;
    box-shadow:
      inset 0 0 0 1px rgba(79,195,247,0.4),
      0 0 6px rgba(79,195,247,0.25);
  }

</style>
