---
import { getDateStr } from '../lib/blog-helpers.ts'

export interface Props {
  post: any
}

const { post } = Astro.props

// 日付プロパティを両対応
const date = post.date ?? post.Date ?? ''
---
<div class="post-date">
  {date ? getDateStr(date) : ''}
</div>

<style>
  .post-date {
    padding: 0 0 0.3rem;
    font-size: 0.9rem;
  }
</style>
