---
import { getNavLink, getPostLink } from '../lib/blog-helpers.ts'
import PostTags from './PostTags.astro'

export interface Props {
  prevPost: any
  nextPost: any
}

const { prevPost, nextPost } = Astro.props

// ðŸ”¥ å¤§æ–‡å­—/å°æ–‡å­—ã®ä¸¡å¯¾å¿œ
const getSlug = (p) => p?.slug ?? p?.Slug ?? ''
const getTitle = (p) => p?.title ?? p?.Title ?? ''
---

<div class="post-relative-link">
  <div>
    {
      nextPost && (
        <a href={getPostLink(getSlug(nextPost))} class="colored">
          <div>â—€ï¸Ž Next</div>
          <div>{getTitle(nextPost)}</div>
          <PostTags post={nextPost} enableLink={false} />
        </a>
      )
    }
  </div>
  <div>
    {
      prevPost && (
        <a href={getPostLink(getSlug(prevPost))} class="colored">
          <div>â–¶ï¸Ž Previous</div>
          <div>{getTitle(prevPost)}</div>
          <PostTags post={prevPost} enableLink={false} />
        </a>
      )
    }
  </div>
  <div>
    <a href={getNavLink('/')} class="text">â†‘Top</a>
  </div>
</div>

<style>
  div.post-relative-link {
    margin-top: 1rem;
  }
  div.post-relative-link > div {
    display: block;
    margin-top: 0.6rem;
  }
  div.post-relative-link > div > a {
    display: block;
    text-align: center;
    line-height: 1.2rem;
    font-size: 0.95rem;
  }
  div.post-relative-link > div > a.text {
    margin-top: 1rem;
    padding: 0.5rem;
    color: inherit;
    font-size: 1rem;
    text-decoration: underline;
    font-weight: 500;
  }
  div.post-relative-link > div > a.colored {
    padding: 1rem;
    border-radius: var(--radius);
    color: var(--fg);
    background: rgba(227, 226, 224, 0.5);
  }
  div.post-relative-link > div > a.colored > div:first-child {
    width: auto;
    text-align: left;
    font-size: 0.85rem;
  }
  div.post-relative-link > div > a.colored > div:nth-child(2) {
    width: auto;
    padding: 0.2rem 0 0.4rem;
    text-align: left;
    font-size: 1rem;
    font-weight: bold;
  }
</style>
