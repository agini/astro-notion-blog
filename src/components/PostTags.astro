---
import { getTagLink } from '../lib/blog-helpers.ts'
import '../styles/notion-color.css'

export interface Props {
  post: any
  enableLink: boolean
}

const { post, enableLink = true } = Astro.props

// ğŸ”¥ Tags ã¨ tags ã®ä¸¡å¯¾å¿œ
const tags = post.Tags ?? post.tags ?? []
---

<div class="post-tags">
  {
    tags.length > 0 &&
      tags.map((tag) => {
        // Cloudflare API â†’ tag.name / tag.color
        const name = tag.name ?? tag.Name ?? ''
        const color = tag.color ?? tag.Color ?? 'default'

        if (enableLink) {
          return (
            <a href={getTagLink(name)} class={`tag ${color}`}>
              {name}
            </a>
          )
        }

        return <span class={`tag ${color}`}>{name}</span>
      })
  }
</div>

<style>
  .post-tags {
    font-size: 0.9rem;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
  .post-tags a,
  .post-tags span {
    display: flex;
    align-items: center;
    flex-shrink: 1;
    min-width: 0;
    border-radius: 3px;
    padding: 2px 6px;
    line-height: 1.2;
    color: rgb(50, 48, 44);
    background: rgba(227, 226, 224, 0.5);
  }
</style>
