---
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: any
}

const { post } = Astro.props

// 大文字・小文字どちらでも対応
const slug = post.slug ?? post.Slug ?? ''
---

<div class="read-more-link">
  <a href={getPostLink(slug)}>→Read more</a>
</div>

<style>
  .read-more-link {
    color: var(--fg);
  }
  .read-more-link a {
    color: rgb(55, 53, 47);
    font-size: 1rem;
    font-weight: 500;
    line-height: 2rem;
    text-decoration: underline;
  }
  @media (max-width: 640px) {
    .read-more-link a {
      width: 50%;
    }
  }
</style>
