---
import { Post } from '../lib/interfaces.ts'

export interface Props {
  post: any
}

const { post } = Astro.props

// excerpt を安全に取得（Worker / Notion 両対応）
const excerpt = post.excerpt ?? post.Excerpt ?? ''
---
<div class="post-excerpt">
  <p>{excerpt}</p>
</div>

<style>
  .post-excerpt {
    padding: 0.2rem 0;
    font-size: 1rem;
  }

  .post-excerpt p {
    margin: 0;
  }
</style>
