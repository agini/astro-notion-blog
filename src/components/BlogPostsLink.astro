---
import { getPostLink } from '../lib/blog-helpers.ts'
import NoContents from './NoContents.astro'

export interface Props {
  heading: string
  posts: any[]
}

const { heading, posts } = Astro.props

// 大文字・小文字の両対応
const getSlug = (p) => p?.slug ?? p?.Slug ?? ''
const getTitle = (p) => p?.title ?? p?.Title ?? ''
const getIcon = (p) => p?.Icon ?? null
---

<div class="blog-posts-link">
  <h2>{heading}</h2>

  {
    posts.length === 0 ? (
      <NoContents contents={posts} />
    ) : (
      <ul>
        {posts.map((post) => {
          const slug = getSlug(post)
          const title = getTitle(post)
          const icon = getIcon(post)

          return (
            <li>
              <a
                href={getPostLink(slug)}
                title={`${icon?.Emoji || ''}${title}`}
              >
                {
                  icon && icon.Type === 'emoji' ? (
                    <>
                      <span>{icon.Emoji}</span>
                      {title}
                    </>
                  ) : icon && icon.Type === 'external' ? (
                    <>
                      <img
                        src={icon.Url}
                        alt="Post title icon in a link list"
                      />
                      {title}
                    </>
                  ) : (
                    title
                  )
                }
              </a>
            </li>
          )
        })}
      </ul>
    )
  }
</div>

<style>
  .blog-posts-link h2 {
    margin: 0;
    padding-left: 0.4rem;
    color: #777;
    font-size: 0.95rem;
  }
  .blog-posts-link ul {
    list-style-type: none;
    padding: 0;
    margin-top: 0.4rem;
    margin-block-end: 1rem;
  }
  .blog-posts-link ul li a {
    display: block;
    border-radius: var(--radius);
    padding: 0.4rem 0.4rem;
    line-height: 1.2rem;
    color: inherit;
    font-size: 0.95rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  .blog-posts-link ul li a:hover {
    background-color: #ddd;
  }
  .blog-posts-link ul li a span,
  .blog-posts-link ul li a img {
    display: inline-block;
    margin-right: 0.2rem;
  }
  .blog-posts-link ul li a img {
    width: 1.25rem;
    height: 1.25rem;
    vertical-align: sub;
  }
</style>