---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'
import NoContents from './NoContents.astro'

export interface Props {
  heading: string
  posts: Post[]
}

const { heading, posts } = Astro.props
---

<div class="blog-posts-link">
  <h2>{heading}</h2>
  {
    posts.length === 0 ? (
      <NoContents contents={posts} />
    ) : (
      <ul>
        {posts.map((post: Post) => (
          <li>
            <a
              href={getPostLink(post.Slug)}
              title={`${post.Icon?.Emoji || ''}${post.Title}`}
            >
              {post.Icon && post.Icon.Type === 'emoji' ? (
                <>
                  <span>{post.Icon.Emoji}</span>
                  {post.Title}
                </>
              ) : post.Icon && post.Icon.Type === 'external' ? (
                <>
                  <img
                    src={post.Icon.Url}
                    alt="Post title icon in a link list"
                  />
                  {post.Title}
                </>
              ) : (
                post.Title
              )}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</div>

<style>
  .blog-posts-link {
    margin-bottom: 0.8rem;
  }
  .blog-posts-link h2 {
    color: #4fc3f7;
    font-size: 0.8rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
  }
  .blog-posts-link ul {
    list-style-type: none;
    padding: 0;
    margin-top: 0.4rem;
    margin-block-end: 1rem;
  }
  .blog-posts-link ul li {
  }
 .blog-posts-link ul li a {
    display: block;
    padding: 0.45rem 0.6rem;
    border-radius: 6px;
    font-size: 0.9rem;
    color: #cfd8dc;
    background: rgba(0, 0, 0, 0.35);
    border: 1px solid rgba(79,195,247,0.18);
    transition:
      background 0.2s ease,
      box-shadow 0.2s ease,
      transform 0.15s ease;
  }
  .blog-posts-link ul li a:hover {
    transform: translateX(2px);
    box-shadow:
      inset 0 0 0 1px rgba(79,195,247,0.35),
      0 0 6px rgba(79,195,247,0.25);
  }
  .blog-posts-link ul li a span,
  .blog-posts-link ul li a img {
    display: inline-block;
    margin-right: 0.2rem;
  }
  .blog-posts-link ul li a img {
    width: 1.25rem;
    height: 1.25rem;
    vertical-align: sub;
  }
</style>
