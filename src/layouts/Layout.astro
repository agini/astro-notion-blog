import BlogTagsLink from '../components/BlogTagsLink.astro'
import { getAllPosts, getAllPages, getDatabase } from '@/lib/notion/client'

export interface Props {
  title?: string
  description?: string
  path?: string
  ogImage?: string
  cover?: string
  coverType?: 'image' | 'iframe'
  noindex?: boolean
}

const {
  title = '',
  description = '',
  path = '/',
  ogImage = '',
  cover,
  coverType = 'image',
  noindex = false,
} = Astro.props

const allPosts = await getAllPosts()
const allPages = await getAllPages()

/* --- Posts --- */
const posts = allPosts

const informationPages = allPages.filter(
  p => p.PageType === 'page'
)

/* --- Sidebar data --- */

// ãƒ©ãƒ³ã‚­ãƒ³ã‚°ï¼ˆä¾‹ï¼šä¸Šä½5ä»¶ï¼‰
const rankedPosts = allPosts
  .filter(p => p.PageType === 'post')
  .slice(0, 5)

// æœ€è¿‘ã®æŠ•ç¨¿ï¼ˆä¾‹ï¼šæœ€æ–°5ä»¶ï¼‰
const recentPosts = allPosts
  .filter(p => p.PageType === 'post')
  .slice(0, 5)

// ã‚¿ã‚°ä¸€è¦§ï¼ˆã‚‚ã— sidebar ã§ä½¿ã£ã¦ã„ã‚‹ãªã‚‰ï¼‰
const tags = Array.from(
  new Set(
    allPosts
      .filter(p => p.PageType === 'post')
      .flatMap(p => p.Tags ?? [])
  )
)

/* --- Site meta --- */
const database = await getDatabase()

const siteTitle = title
  ? `${title} - ${database.Title}`
  : database.Title

const siteDescription = description || database.Description
const siteURL = new URL(getNavLink(path), Astro.site).toString()

/* --- Cover / OG --- */
let coverImageURL: string | undefined
if (database.Cover) {
  if (database.Cover.Type === 'external') {
    coverImageURL = database.Cover.Url
  } else if (database.Cover.Type === 'file') {
    try {
      coverImageURL = filePath(new URL(database.Cover.Url))
    } catch {
      console.log('Invalid DB cover image URL:', database.Cover?.Url)
    }
  }
}

const displayCover =
  cover ?? coverImageURL ?? '/cover/default.webp'

const siteOGImage = new URL(
  getStaticFilePath('/default-og-image.png'),
  Astro.site
)

const finalOGImage = ogImage
  ? new URL(ogImage, Astro.site).toString()
  : siteOGImage.toString()

